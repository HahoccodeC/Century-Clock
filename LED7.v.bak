module LED7 (
input [3:0] in,
output [6:0] led
);
assign led=(in==4'b0000)?7'b0000001: //0
           (in==4'b0001)?7'b1001111: //1
			  (in==4'b0010)?7'b0010010: //2
			  (in==4'b0011)?7'b0000110: //3
			  (in==4'b0100)?7'b1001100: //4
			  (in==4'b0101)?7'b0100100: //5
			  (in==4'b0110)?7'b0100000: //6
			  (in==4'b0111)?7'b0001111: //7
			  (in==4'b1000)?7'b0000000: //8
			  (in==4'b1001)?7'b0000100: //9
			  (in==4'b1010)?7'b0001000: //A
			  (in==4'b1011)?7'b1100000: //B
			  (in==4'b1100)?7'b0110001: //C
			  (in==4'b1101)?7'b1000010: //D
			  (in==4'b1110)?7'b0110000: //E
			  (in==4'b1111)?7'b0111000:7'b0111000; //F
			  
			  
			  
endmodule














